<Window x:Class="JavaLearning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JavaLearning"
        mc:Ignorable="d"
        Title="Главное окно ученика"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid Background="#3A3A3A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#151515" Padding="12" Margin="8" CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Меню" FontWeight="Bold" FontSize="14" Margin="6"/>

                <StackPanel Grid.Row="1" Margin="6 12 6 6" VerticalAlignment="Top">
                    <Button x:Name="ProfileBtn" Click="ProfileBtn_Click" Height="36" Margin="0 0 0 8" Background="Transparent" BorderBrush="#FFCCCCCC">
                        <TextBlock Text="Профиль" Padding="8 0"/>
                    </Button>

                    <Button x:Name="LectionBtn" Click="LectionBtn_Click" Height="36" Margin="0 0 0 8" Background="Transparent" BorderBrush="#FFCCCCCC">
                        <TextBlock Text="Лекции" Padding="8 0"/>
                    </Button>

                    <Button x:Name="TestingBtn" Click="TestingBtn_Click" Height="36" Background="Transparent" BorderBrush="#FFCCCCCC">
                        <TextBlock Text="Тестирование" Padding="8 0"/>
                    </Button>
                </StackPanel>

                <Button Grid.Row="2" Content="Выйти из аккаунта" Margin="6" Height="42" Name="GoOutBtn" Click="GoOutBtn_Click" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <Frame Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="12"/>
    </Grid>
</Window>
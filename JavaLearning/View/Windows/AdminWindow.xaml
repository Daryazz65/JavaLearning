<Window x:Class="JavaLearning.View.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JavaLearning.View.Windows"
        mc:Ignorable="d"
        Title="Главное окно администратора"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid Background="#3A3A3A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#151515" Padding="12" BorderThickness="0" CornerRadius="4" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="6" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Source="/Resources/logoJs.png" Width="140" Height="36" Stretch="Uniform" VerticalAlignment="Center" Margin="0 0 8 0"/>
                </Grid>

                <StackPanel Grid.Row="1" Margin="6 18 6 6" VerticalAlignment="Top" >
                    <Button HorizontalAlignment="Stretch" Height="36" x:Name="QuestionUserBtn" Click="QuestionUserBtn_Click" Background="Transparent" BorderBrush="#FFCCCCCC" Margin="0 0 0 8">
                        <TextBlock Text="Ученики и вопросы" HorizontalAlignment="Left" Padding="8 0"/>
                    </Button>

                    <Button HorizontalAlignment="Stretch" Height="36" x:Name="UserLectureBtn" Click="UserLectureBtn_Click" Background="Transparent" BorderBrush="#FFCCCCCC" Margin="0 0 0 8">
                        <TextBlock Text="Ученики и лекции" HorizontalAlignment="Left" Padding="8 0"/>
                    </Button>

                    <Button HorizontalAlignment="Stretch" Height="36" x:Name="UserBtn" Click="UserBtn_Click" Background="Transparent" BorderBrush="#FFCCCCCC">
                        <TextBlock Text="Пользователи" HorizontalAlignment="Left" Padding="8 0"/>
                    </Button>
                </StackPanel>

                <Button Grid.Row="2" Content="Выйти из аккаунта" Margin="6" Height="42" Name="GoOutBtn" Click="GoOutBtn_Click" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <Frame Name="MainFrameAdmin" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="12"/>
    </Grid>
</Window>
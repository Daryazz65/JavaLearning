<Page x:Class="JavaLearning.View.Pages.OperatorLectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JavaLearning.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OperatorLectionPage">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="White" Padding="8" Margin="0 0 6 0">
            <StackPanel>
                <TextBlock Text="Лекции" FontSize="16" Margin="0 0 0 8"/>
                <ListBox Name="LectureList" DisplayMemberPath="Title"
                         SelectionChanged="LectureList_SelectionChanged"  />
            </StackPanel>
        </Border>
        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" />
        <Border Grid.Column="2" Background="White" Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Детали лекции" FontSize="25" Margin="0 0 0 12"/>
                    <TextBlock Text="Название" FontSize="14"/>
                    <TextBlock Name="TitleTb" Text="—" Margin="0 4 0 8"/>
                    <TextBlock Text="Тип сложности" FontSize="14"/>
                    <TextBlock Name="TypeTb" Text="—" Margin="0 4 0 8"/>
                    <TextBlock Text="Уровень" FontSize="14"/>
                    <TextBlock Name="LevelTb" Text="—" Margin="0 4 0 8"/>
                    <TextBlock Text="Описание" FontSize="14"/>
                    <TextBox Name="TextCorrectTb" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="180"
                             BorderBrush="Gray" Margin="0 4 0 12"/>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                        <Button Name="OpenFileBtn" Content="Открыть файл" Width="150" Margin="0 0 8 0" Click="OpenFileBtn_Click"/>
                        <Button Name="OpenVideoBtn" Content="Открыть видео" Width="150" Click="OpenVideoBtn_Click"/>
                    </StackPanel>
                    <TextBlock Text="Путь к файлу" />
                    <TextBlock Name="FilePathTb" Text="—" Margin="0 4 0 8" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="URL видео"/>
                    <TextBlock Name="VideoUrlTb" Text="—" Margin="0 4 0 8" TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
<Page x:Class="JavaLearning.View.Pages.OperatorTestingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JavaLearning.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="OperatorTestingPage">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#141414" Padding="10" Margin="0 0 6 0">
            <StackPanel>
                <TextBlock Text="Тестирование" FontSize="18" Margin="0 0 0 12"/>
                <TextBlock Text="Выберите тип сложности" />
                <ComboBox Name="TypeCb" DisplayMemberPath="Name" Margin="0 6 0 12" SelectionChanged="TypeCb_SelectionChanged"/>
                <TextBlock Text="Уровни" />
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="360" Margin="0 6 0 12">
                    <WrapPanel Name="LevelsPanel" Orientation="Horizontal" ItemHeight="40" ItemWidth="140"/>
                </ScrollViewer>
            </StackPanel>
        </Border>
        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" Background="#203235" />
        <Border Grid.Column="2" Background="#141414" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Прохождение теста" FontSize="18" Margin="0 0 0 12"/>
                <StackPanel Grid.Row="1" Name="ContentPanel">
                    <StackPanel Name="WelcomePanel">
                        <TextBlock Text="Выберите уровень слева, чтобы начать тест." FontSize="14" Margin="0 0 0 8"/>
                    </StackPanel>
                    <StackPanel Name="QuizPanel" Visibility="Collapsed">
                        <TextBlock Name="QuestionNumberTb" FontSize="12"/>
                        <TextBlock Name="QuestionTextTb" Text="Вопрос" FontSize="16" TextWrapping="Wrap" Margin="0 6 0 12"/>
                        <StackPanel Name="AnswersPanel" Margin="0 6 0 12"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Name="PrevBtn" Content="Назад" Width="100" Margin="0 0 8 0" Click="PrevBtn_Click" IsEnabled="False"/>
                            <Button Name="NextBtn" Content="Далее" Width="100" Margin="0 0 8 0" Click="NextBtn_Click"/>
                            <Button Name="FinishBtn" Content="Завершить" Width="120" Click="FinishBtn_Click" Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Name="ResultPanel" Visibility="Collapsed" Margin="0 12 0 0">
                        <TextBlock Name="ResultTb" FontSize="16" Margin="0 0 0 12"/>
                        <Button Name="CloseResultBtn" Content="Закончить" Width="120" Click="CloseResultBtn_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
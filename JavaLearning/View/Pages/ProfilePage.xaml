<Page x:Class="JavaLearning.View.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JavaLearning.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="ProfilePage">

    <Grid>
        <Border Width="860" Height="420"  CornerRadius="10" Padding="24"
                HorizontalAlignment="Center" VerticalAlignment="Center" Background="#151515">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="290"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="8" Padding="18" Background="#151515">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                        <Grid Width="110" Height="110" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse x:Name="AvatarBgEllipse" Width="110" Height="110"  />
                            <Image Name="PhotoImg" Width="110" Height="110" Stretch="UniformToFill" Visibility="Collapsed">
                                <Image.Clip>
                                    <EllipseGeometry Center="55,55" RadiusX="55" RadiusY="55"/>
                                </Image.Clip>
                            </Image>
                            <TextBlock Name="AvatarTb" Text="AB"  FontSize="32" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="{Binding FullName}"  FontSize="14" FontWeight="SemiBold"
                                   HorizontalAlignment="Center" Margin="0 12 0 0"/>

                        <StackPanel Orientation="Vertical" Margin="0 12 0 0" HorizontalAlignment="Center" >
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Name="ChangePhotoBtn" Content="Изменить" Click="ChangePhotoBtn_Click"
                                        Width="120" Height="28" Margin="0 0 8 0"/>
                                <Button Name="DeletePhotoBtn" Content="Удалить" Click="DeletePhotoBtn_Click"
                                        Width="120" Height="28" Visibility="Collapsed"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="6">
                    <TextBlock Text="Профиль пользователя" FontSize="20" FontWeight="Bold" Margin="0 0 230 10"/>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 12">
                        <Border x:Name="CompletedBorder" Padding="10" CornerRadius="6" Margin="0 0 12 0" Background="#F0DB4F">
                            <StackPanel>
                                <TextBlock Text="Лекций завершено" FontSize="12"/>
                                <TextBlock Name="CompletedCountTb" Text="0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="AnsweredBorder" Padding="10" CornerRadius="6" Background="#F0DB4F">
                            <StackPanel>
                                <TextBlock Text="Вопросов отвечено" FontSize="12"/>
                                <TextBlock Name="AnsweredCountTb" Text="0" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 6 0 6">
                        <TextBlock Text="ФИО:" Width="200" />
                        <TextBlock Text="{Binding FullName}" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 6 0 6">
                        <TextBlock Text="Логин:" Width="200"/>
                        <TextBlock Text="{Binding Login}"  FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 6 0 6">
                        <TextBlock Text="Дата регистрации:" Width="200" />
                        <TextBlock Text="{Binding RegistrationDate, StringFormat=d}"  FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 6 0 6">
                        <TextBlock Text="Роль:" Width="200" />
                        <TextBlock Text="{Binding Role.Name}" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>